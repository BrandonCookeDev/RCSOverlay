<!DOCTYPE StreamControlLayout>
<layout width='700' height='500' tabbed='0'>
    <tabSet x='0' y='0' width='700' height='700'>
        <tab name="Scoreboard">
            <!-- who is serving the ball? -->
            <label x='10' y='5' width='75' height='14'>Serving?</label>
            <radioGroup id='is_serving'>
                <radioButton 
                    x='10' y='25'
                    width='70' height='20'
                    value='P1'>
                </radioButton>
                <radioButton
                    x='10' y='60'
                    width='70' height='20'
                    value='P2'>
                </radioButton>
            </radioGroup>
            
            <!-- player names -->
            <label x='35' y='25' width='40' height='14'>Player1:</label>
            <label x='35' y='60' width='40' height='14'>Player2:</label>

            <lineEdit id='p1_name' 
                dataSets='/dataSets/tabletennis/players.csv'
                x='80' y='20' 
                width='170' height='20'> Player1 Name
            </lineEdit>

            <lineEdit id='p2_name'
                dataSets='/dataSets/tabletennis/players.csv'
                x='80' y='55' 
                width='170' height='20'> Player2 Name
            </lineEdit>

            <!-- player scores -->
            <label x='275' y='0' height='14' width='40'>Sets</label>

            <label x='325' y='0' height='14' width='40'>Set1</label>
            <label x='375' y='0' height='14' width='40'>Set2</label>
            <label x='425' y='0' height='14' width='40'>Set3</label>
            <label x='475' y='0' height='14' width='40'>Set4</label>
            <label x='525' y='0' height='14' width='40'>Set5</label>
            <label x='575' y='0' height='14' width='40'>Set6</label>
            <label x='625' y='0' height='14' width='40'>Set7</label>

            <spinBox id='p1_sets'
                x='270' y='20'
                width='35' height='25' maximum='99'>
            </spinBox>
            <spinBox id='p2_sets'
                x='270' y='55'
                width='35' height='25' maximum='99'>
            </spinBox>

            <spinBox id='p1_set1'
                x='320' y='20'
                width='35' height='25' maximum='99'>
            </spinBox>
            <spinBox id='p2_set1'
                x='320' y='55'
                width='35' height='25' maximum='99'>
            </spinBox>

            <spinBox id='p1_set2'
                x='370' y='20'
                width='35' height='25' maximum='99'>
            </spinBox>
            <spinBox id='p2_set2'
                x='370' y='55'
                width='35' height='25' maximum='99'>
            </spinBox>

            <spinBox id='p1_set3'
                x='420' y='20'
                width='35' height='25' maximum='99'>
            </spinBox>
            <spinBox id='p2_set3'
                x='420' y='55'
                width='35' height='25' maximum='99'>
            </spinBox>

            <spinBox id='p1_set4'
                x='470' y='20'
                width='35' height='25' maximum='99'>
            </spinBox>
            <spinBox id='p2_set4'
                x='470' y='55'
                width='35' height='25' maximum='99'>
            </spinBox>
            
            <spinBox id='p1_set5'
                x='520' y='20'
                width='35' height='25' maximum='99'>
            </spinBox>
            <spinBox id='p2_set5'
                x='520' y='55'
                width='35' height='25' maximum='99'>
            </spinBox>

            <spinBox id='p1_set6'
                x='570' y='20'
                width='35' height='25' maximum='99'>
            </spinBox>
            <spinBox id='p2_set6'
                x='570' y='55'
                width='35' height='25' maximum='99'>
            </spinBox>

            <spinBox id='p1_set7'
                x='620' y='20'
                width='35' height='25' maximum='99'>
            </spinBox>
            <spinBox id='p2_set7'
                x='620' y='55'
                width='35' height='25' maximum='99'>
            </spinBox>

            <!-- Checkboxes for the sets -->
            <!--
            <label x='275' y='0' height='14' width='40'>Sets</label>

            <label x='325' y='0' height='14' width='40'>Set1</label>
            <label x='375' y='0' height='14' width='40'>Set2</label>
            <label x='425' y='0' height='14' width='40'>Set3</label>
            <label x='475' y='0' height='14' width='40'>Set4</label>
            <label x='525' y='0' height='14' width='40'>Set5</label>
            <label x='575' y='0' height='14' width='40'>Set6</label>
            <label x='625' y='0' height='14' width='40'>Set7</label>
            -->
            <label
                x='250' y='90'
                height='14' width='100'> Show Set? </label>

            <checkBox id="is_set1"
                x='325' y='75'
                height='50' width='50'>
            </checkBox>

            <checkBox id="is_set2"
                x='375' y='75'
                height='50' width='50'>
            </checkBox>

            <checkBox id="is_set3"
                x='425' y='75'
                height='50' width='50'>
            </checkBox>

            <checkBox id="is_set4"
                x='475' y='75'
                height='50' width='50'>
            </checkBox>

            <checkBox id="is_set5"
                x='525' y='75'
                height='50' width='50'>
            </checkBox>

            <checkBox id="is_set6"
                x='575' y='75'
                height='50' width='50'>
            </checkBox>

            <checkBox id="is_set7"
                x='625' y='75'
                height='50' width='50'>
            </checkBox>
        </tab>
    </tabSet>
</layout>